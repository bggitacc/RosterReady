extends layout

block content



  if (rtype == "player")
    div.row(style="background:#fff;")
      form.form-signin(role='form', action="/register",method="post")
        h2.form-signin-heading Player Sign Up
        h5 First Name
        input.form-control(type='text', name="name", placeholder='First Name')
        h5 Last Name
        input.form-control(type='text', name="lname", placeholder='Last Name')
        h5 User Name
        input.form-control(type='text', name="username", placeholder='User Name')
        h5 Email
        input.form-control(type='email', name="email", placeholder='Email')
        h5 Profile Picture Url
        input.form-control(type='text', name="picurl", placeholder='Picture URL')
        h5 Phone
        input.form-control(type='phone', name="phone", placeholder='Phone')
        h5 Password
        input.form-control(type='password', name="password", placeholder='Select Password')
        hr
        h5 Location
        select(name='location')
          option(value='San Diego City') San Diego City
          option(value='North County Coastal') North County Coastal
          option(value='North County Inland') North County Inland
          option(value='East County') East County
          option(value='South Bay') South Bay
        
        hr
        h4.interest Please select your sports of interest

        div
          div.col-sm-12
        
            div.checkbox
              label(style='font-size: 1.5em') Baseball
                input.sev_check(type='checkbox', name='baseball', id='baseball')
                span.cr
                  i.cr-icon.fa.fa-check

            div.checkbox
              label(style='font-size: 1.5em') Basketball
                input(type='checkbox', name='basketball')
                span.cr
                  i.cr-icon.fa.fa-check      

            div.checkbox
              label(style='font-size: 1.5em') Soccer
                input(type='checkbox', name='soccer')
                span.cr
                  i.cr-icon.fa.fa-check

            div.checkbox
              label(style='font-size: 1.5em') Volleyball
                input(type='checkbox', name='vollyball')
                span.cr
                  i.cr-icon.fa.fa-check

            div.checkbox
              label(style='font-size: 1.5em') Football
                input(type='checkbox', name='football')
                span.cr
                  i.cr-icon.fa.fa-check
            div
                  input(type='hidden', name='usertype', value='player')
                  input(type='hidden', name='status', value='true')
                  input(type='hidden', name='teamcat', value='none')
            div
            h4.interest Gender    
            div.btn-group
            div.radio
              label(style='font-size: 1.5em') Female
                input(type='radio', name='gender', value='f', checked)
                span.cr            
                  i.cr-icon.fa.fa-circle

            div.radio
              label(style='font-size: 1.5em') Male
                input(type='radio', name='gender', value='m')
                span.cr            
                  i.cr-icon.fa.fa-circle
            div
                button.btn.btn-lg.btn-primary.btn-block(type='submit', style='margin-bottom:20px;') Create Account


  if (rtype == "team")
    div.row(style="background:#fff;")
      form.form-signin(role='form', action="/register",method="post")
        h2.form-signin-heading Team Sign Up
        h5 First Name (Team Contact)
        input.form-control(type='text', name="name", placeholder='First Name')
        h5 Last Name (Team Contact)
        input.form-control(type='text', name="lname", placeholder='Last Name')
        h5 Team Name
        input.form-control(type='text', name="teamname", placeholder='Team Name')
        h5 User Name
        input.form-control(type='text', name="username", placeholder='User Name')
        h5 Phone
        input.form-control(type='phone', name="phone", placeholder='Phone')
        h5 Email Address
        input.form-control(type='email', name="email", placeholder='Email')
        h5 Team Picture Url
        input.form-control(type='text', name="picurl", placeholder='Team Picture URL')
        h5 Password
        input.form-control(type='password', name="password", placeholder='Select Password')
        hr
        h5 Location
        select(name='location')
          option(value='San Diego City') San Diego City
          option(value='North County Coastal') North County Coastal
          option(value='North County Inland') North County Inland
          option(value='East County') East County
          option(value='South Bay') South Bay
        
        hr

        br
        div
        h4.interest Please select your team category
        div.btn-group
        div.radio
            div.radio
              label(style='font-size: 1.5em') Baseball
                input(type='radio', name='teamcat', value='baseball', checked)
                span.cr
                  i.cr-icon.fa.fa-circle

            div.radio
              label(style='font-size: 1.5em') Basketball
                input(type='radio', name='teamcat', value='basketball')
                span.cr
                  i.cr-icon.fa.fa-circle      

            div.radio
              label(style='font-size: 1.5em') Soccer
                input(type='radio', name='teamcat', value='soccer')
                span.cr
                  i.cr-icon.fa.fa-circle

            div.radio
              label(style='font-size: 1.5em') Volleyball
                input(type='radio', name='teamcat', value='vollyball')
                span.cr
                  i.cr-icon.fa.fa-circle

            div.radio
              label(style='font-size: 1.5em') Football
                input(type='radio', name='teamcat', value='football')
                span.cr
                  i.cr-icon.fa.fa-circle
            div
                  input(type='hidden', name='usertype', value='team')
                  input(type='hidden', name='status', value='true')

            div

                    

                button.btn.btn-lg.btn-primary.btn-block(type='submit', style='margin-bottom:20px;') Create Account      

      