doctype html
html
  head
    title= title
 
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css', integrity='sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp', crossorigin='anonymous')
    link(rel='stylesheet', href='/stylesheets/style1.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
    script(type="text/javascript", charset="utf-8", src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')

 
    
 
  
  body
   p #{user}
    nav.navbar.navbar-default.rrnav
      div.container-fluid
        div.navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
           
          
        div.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right

            if (!user)
              
              li
                button.btn.btn-warning(data-toggle="modal", data-target="#myModal", style="margin-left:20px;margin-top:10px;margin-right:20px;") Register/Login
              li
                button.btn.btn-warning(style="margin-left:20px;margin-top:10px;",onClick="window.location.href='/react'") React  
            if (user)

              li
                h4(style="color:#fff;margin-top:15px;margin-right:300px") Welcome : #{user.name} <img src="#{user.picurl}" style="height:30px;width:30px;border: 3px solid #000;border-radius:50%;">

              li
                button.btn.btn-primary(style="margin-left:20px;margin-top:10px;",onClick="window.location.href='/'") Home
                
              li
                button.btn.btn-primary(style="margin-left:20px;margin-top:10px;",onClick="window.location.href='/logout'") Logout

              li
                button.btn.btn-primary(style="margin-left:20px;margin-top:10px;margin-right:20px;",onClick="window.location.href='/account'") Account

              
           
      a(href='/')      
        img(src='/images/rrlogo.png', class='rrlogo')     
                
  div.container
    div.content
      block content

        div.row(style='background:#fff;padding-top:40px;')
          <div class="col-md-12" style="margin: auto;text-align: center;">
          <div class="col-md-1"></div>
          <div class="col-md-2">
          <img src='https://www.govavi.com/wp-content/uploads/2016/10/vavi-flag-football-tile.jpg' style='height:130px;width:130px;margin-right:30px;margin-left:30px;'>
          h4 Football
          </div>
          <div class="col-md-2">
          <img src='/images/vollyball.jpg' style='height:130px;width:130px;margin-right:30px;margin-left:30px;'>
          h4 Volleyball
          </div>
          <div class="col-md-2">
          <img src='https://www.govavi.com/wp-content/uploads/2016/10/vavi-soccer-tile.jpg' style='height:130px;width:130px;margin-right:30px;margin-left:30px;'>
          h4 Soccer
          </div>
          <div class="col-md-2">
          <img src='https://www.govavi.com/wp-content/uploads/2016/10/vavi-basketball-tile.jpg' style='height:130px;width:130px;margin-right:30px;margin-left:30px;'>
          h4 Basketball
          </div>
          <div class="col-md-2">
          <img src='https://www.govavi.com/wp-content/uploads/2016/10/vavi-softball-tile.jpg' style='height:130px;width:130px;margin-right:30px;margin-left:30px;'>
          h4 Softball
          </div>
          <div class="col-md-1"></div>
  
      div.row(style='background:#ddd;height:100px;')
        div.col-md-12
        div.col-md-2
        div.col-md-3(style='margin-top:4px;')
          h2 Fun Finder
          h5 Delight my inbox with Sport Leagues & Events
        div.col-md-3
          form(id='emaillist',action='/emaillist', method='post')
          input(type='email',name='emailcontact', style='width:380px;height:50px;margin-top:30px;font-size:20px;padding-left:15px;', placeholder='Email')
        div.col-md-3
          button.btn.btn-warning.btn-circle.btn-xl(type='submit',style='heigt:60px;width:60px;text-align:center;margin-left:20px;') Go!

      div.row(style='height: 200px;width:100%;background:#000;')
            div.col-md-12.foot
              i.fa.fa-facebook-official.fa-5x.icons
              i.fa.fa-twitter-square.fa-5x.icons
              i.fa.fa-snapchat-square.fa-5x.icons
              h1.footer &#9977; Copyright Roster Ready &#169; 2017     


  
  
   
div.modal.fade#myModal
    div.modal-dialog(role="document")
        div.modal-content
            div.modal-header
              h4.modal-title Please select registration type
                button.close(type="button", data-dismiss="modal", aria-label="Close")
                  span(aria-hidden="true") &times;
            div.modal-body
             
               button.btn.btn-lg.btn-primary.btn-block(type='submit', onclick="location.href='/register/player'") Roster Ready Player
               button.btn.btn-lg.btn-primary.btn-block(type='submit', onclick="location.href='/register/team'") Roster Ready Team
               hr
               form.form-signin(role='form', action='/login', method='post')
                h4.form-signin-heading Or Please sign in
                label.sr-only(for='inputEmail')
                input.form-control(type='text', name='username', id='inputEmail', placeholder='Username', required, autofocus)
                input.form-control(type='password', name='password', id='inputPassword', placeholder='Password')
                button.btn.btn-lg.btn-primary.btn-block(type='submit') LOGIN
            div.modal-footer
              
                button.btn.btn-secondary(type="button", data-dismiss="modal", aria-label="Close") Close

   
div.modal.fade#login
    div.modal-dialog(role="document")
        div.modal-content
            div.modal-header
              h5.modal-title Please log in to continue
                button.close(type="button", data-dismiss="modal", aria-label="Close")
                  span(aria-hidden="true") &times;
            div.modal-body
              form.form-signin(role='form', action='/login', method='post')
                h2.form-signin-heading Please sign in
                label.sr-only(for='inputEmail')
                input.form-control(type='text', name='username', id='inputEmail', placeholder='Username', required, autofocus)
                input.form-control(type='password', name='password', id='inputPassword', placeholder='Password')
                button.btn.btn-lg.btn-primary.btn-block(type='submit') LOGIN
            div.modal-footer
              
                button.btn.btn-secondary(type="button", data-dismiss="modal", aria-label="Close") Close                

    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js', integrity='sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa', crossorigin='anonymous')
